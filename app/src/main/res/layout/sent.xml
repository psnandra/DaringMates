    android:layout_height="wrap_content"
    >


        <TextView
            android:id="@+id/txt_sent_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_5sdp"
